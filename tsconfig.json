{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true,
    },
    "include": [
      "test/**/*"
    ]
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "types",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "build"
  },
  "include": [
    "@types/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}